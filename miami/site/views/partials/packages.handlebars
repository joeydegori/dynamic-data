<div class="row owl-theme owl-carousel owl-packages">
  {{#each data.packages}}
    <div class="card">
      <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}" />
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: ${{this.price}}</li>
        <li class="list-group-item">Duration: {{this.duration}}</li>
      </ul>
    </div>
  {{/each}}
</div>